<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_nice"
    android:id="@+id/relativeLayout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/logo_akwe_" />

    <EditText
        android:id="@+id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:typeface="sans"
        android:textStyle="italic"
        android:hint="Enter Your UserName....."
        />

    <EditText
        android:id="@+id/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userNameTextView"
        android:layout_marginTop="17dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:inputType="textPassword"
        android:hint="Enter Your Password....."
        />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="sign up"
        android:layout_below="@+id/passwordTextView"
        android:onClick="signuClick"
        />

    <TextView
        android:id="@+id/changeSignuModeTexView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signUpButton"
        android:layout_alignBottom="@+id/signUpButton"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/signUpButton"
        android:text=" Or Login"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="20sp" />
</RelativeLayout>
